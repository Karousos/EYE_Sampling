<Window x:Class="EYE_Sampling.Window_Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Αντιστοίχιση πεδίων με στήλες Excel" Height="550" Width="273" WindowStyle="ToolWindow" Loaded="Window_Loaded_1" WindowStartupLocation="CenterOwner">
    <Grid x:Name="MapGrid">
        <Button Content="Αποθήκευση"  x:Name="BT_Save" BorderThickness="0,0,0,0"
    		Background="Transparent" Margin="0,0,10,10" TabIndex="3" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Click="BT_Save_Click"/>
        <Button Content="Ακύρωση"  x:Name="BT_Cancel" BorderThickness="0,0,0,0"
        	Background="Transparent" Margin="10,0,0,10" HorizontalAlignment="Left" Width="100" TabIndex="3" Height="32" VerticalAlignment="Bottom" Click="BT_Cancel_Click"/>
        <Label Content="Πεδίο Πίνακα" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Αρ. στήλης Excel" HorizontalAlignment="Left" Margin="98,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Window>
